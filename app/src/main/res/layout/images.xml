<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- image1 -->
        <ImageView
            android:id="@+id/img1"
            android:layout_width="250dp"
            android:layout_height="456dp"
            android:layout_gravity="center"
            android:background="#D9BFBF"
            android:padding="16dp"
            android:src="@drawable/img1" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="12dp"
            app:cardPreventCornerOverlap="false"
            android:background="@color/white">

            <!-- LinearLayout to stack TextViews vertically -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Description TextView -->
                <TextView
                    android:id="@+id/img1_Desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/graduation_2022"
                    android:textSize="16sp"
                    />

                <!-- Author TextView below description -->
                <TextView
                    android:id="@+id/img1_Author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="@string/author_teng_bangkeng"
                    android:textColor="#E0DEDE"
                    android:textSize="25sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>


</RelativeLayout>